	<class>ru.projects.Shop.entity.Buy</class>
	<class>ru.projects.Shop.entity.City</class>
	<class>ru.projects.Shop.entity.Country</class>
	<class>ru.projects.Shop.entity.Delivery</class>
	<class>ru.projects.Shop.entity.Product</class>
