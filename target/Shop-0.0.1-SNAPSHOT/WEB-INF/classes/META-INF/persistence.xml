	<class>ru.projects.Shop.entity.TypeProduct</class>
	<class>ru.projects.Shop.entity.TypeShop</class>
	<class>ru.projects.Shop.entity.Warehouse</class>
	<class>ru.projects.Shop.entity.Worker</class>
	<class>ru.projects.Shop.entity.Comment</class>
	<class>ru.projects.Shop.entity.Client</class>
	<class>ru.projects.Shop.entity.Forum</class>
	<class>ru.projects.Shop.entity.Message</class>
	<class>ru.projects.Shop.entity.Adress</class>
	<class>ru.projects.Shop.entity.Order</class>
	<class>ru.projects.Shop.entity.StatusOfOrder</class>
	<class>ru.projects.Shop.entity.Transportation</class>
	<class>ru.projects.Shop.entity.TransportationType</class>
	<class>ru.projects.Shop.entity.BonusCard</class>
	<properties>
	  <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="eclipselink.logging.level" value="INFO"/>
	</properties>
	</persistence-unit>
</persistence>
